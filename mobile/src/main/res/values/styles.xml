<resources xmlns:app="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style
        name="Counter" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Card" >
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="contentPaddingBottom">16dp</item>
    </style>

    <style name="Text" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="BoldText" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BolderText" >
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="WidgetText" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/A50_indigo</item>
    </style>

    <style name="WidgetSmallText" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/A50_indigo</item>
    </style>
</resources>
