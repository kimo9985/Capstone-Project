<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/profile_fragment"
    android:background="@color/A400_indigo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/cardview_elevation"
        android:layout_margin="@dimen/layout_margin_8dp"
        style="@style/Card" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/photo"
                android:layout_width="325dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:contentDescription="@string/profile_image"
                android:padding="8dp"
                android:longClickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo"
                android:text="@string/player_name"
                android:contentDescription="@string/player_cd_name"
                android:id="@+id/profile_name"
                style="@style/BoldText"
                android:longClickable="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name"
                android:contentDescription="@string/player_cd_height"
                android:text="@string/player_height"
                android:id="@+id/profile_height"
                style="@style/Text"
                android:longClickable="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/player_cd_weight"
                android:text="@string/player_weight"
                android:id="@+id/profile_weight"
                style="@style/Text"
                android:longClickable="true"
                android:layout_alignTop="@+id/profile_grip"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/player_cd_grip"
                android:text="@string/player_grip"
                android:id="@+id/profile_grip"
                android:layout_below="@+id/profile_name"
                style="@style/Text"
                android:longClickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_height"
                android:contentDescription="@string/player_cd_racket"
                style="@style/Text"
                android:longClickable="true"
                android:text="@string/player_racket"
                android:id="@+id/profile_racket" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>